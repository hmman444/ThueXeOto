                        android:id="@+id/btnWithDriver"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:backgroundTint="@null"
                        android:text="Xe cÃ³ tÃ i xáº¿"
                        android:textSize="18sp"
