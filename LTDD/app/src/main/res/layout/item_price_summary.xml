<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F7F7F8">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/txtPriceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bảng tính giá"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="12dp" />

    <!-- Danh sách giá -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="1dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:backgroundTint="#FFFFFF"
        android:layout_marginBottom="8dp">

        <!-- Hàng giá -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="6dp">

            <!-- Tên mục -->
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Giá thuê mỗi ngày"
                android:textSize="14sp"
                android:textColor="#000000" />

            <!-- Giá trị -->
            <TextView
                android:id="@+id/txtRentalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="950.000 /ngày"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="6dp">

            <!-- Tên mục -->
            <TextView
                android:id="@+id/tvLabel2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Phí bảo hiểm mỗi ngày"
                android:textSize="14sp"
                android:textColor="#000000" />

            <!-- Giá trị -->
            <TextView
                android:id="@+id/txtInsuranceFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="950.000 /ngày"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="6dp">

            <!-- Tên mục -->
            <TextView
                android:id="@+id/tvLabel3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Phí giao xe tận nơi"
                android:textSize="14sp"
                android:textColor="#000000" />

            <!-- Giá trị -->
            <TextView
                android:id="@+id/txtDeliveryFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="950.000 /ngày"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="6dp">

            <!-- Tên mục -->
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Số ngày thuê"
                android:textSize="14sp"
                android:textColor="#000000" />

            <!-- Giá trị -->
            <TextView
                android:id="@+id/txtTotalDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="950.000 /ngày"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="6dp">

            <!-- Tên mục -->
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Phụ phí thuê tài xế"
                android:textSize="14sp"
                android:textColor="#000000" />

            <!-- Giá trị -->
            <TextView
                android:id="@+id/txtDriverFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="950.000 /ngày"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Tổng cộng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Tổng cộng"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.197.950 x 1 ngày"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
