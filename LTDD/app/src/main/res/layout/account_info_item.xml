<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Ngày sinh -->
    <LinearLayout
        android:id="@+id/account_Birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Ngày sinh"
            android:textSize="14sp"
            android:textColor="#333333"/>

        <ImageView
            android:id="@+id/iconBirth"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_warning"/>

        <TextView
            android:id="@+id/statusBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="Chưa xác thực"
            android:textSize="14sp"
            android:textColor="@color/bright_orange"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi tiết"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginStart="12dp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_right_arrow"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

    <!-- Giới tính -->
    <LinearLayout
        android:id="@+id/account_Gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Giới tính"
            android:textSize="14sp"
            android:textColor="#333333"/>

        <ImageView
            android:id="@+id/icon_Gender"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_warning"/>

        <TextView
            android:id="@+id/status_Gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="Chưa xác thực"
            android:textSize="14sp"
            android:textColor="@color/bright_orange"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi tiết"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginStart="12dp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_right_arrow"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

    <!-- Email (luôn xác thực, không cần thay đổi) -->
    <LinearLayout
        android:id="@+id/account_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Email"
            android:textSize="14sp"
            android:textColor="#333333"/>

        <ImageView
            android:id="@+id/icon_Email"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_verify"/>

        <TextView
            android:id="@+id/status_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="Đã xác thực"
            android:textSize="14sp"
            android:textColor="@color/green_700"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi tiết"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginStart="12dp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_right_arrow"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

    <!-- Số điện thoại -->
    <LinearLayout
        android:id="@+id/account_Phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Số điện thoại"
            android:textSize="14sp"
            android:textColor="#333333"/>

        <ImageView
            android:id="@+id/iconPhone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_warning"/>

        <TextView
            android:id="@+id/statusPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="Chưa xác thực"
            android:textSize="14sp"
            android:textColor="@color/bright_orange"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi tiết"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginStart="12dp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_right_arrow"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>
